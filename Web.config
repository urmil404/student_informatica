<configuration>

    <system.web>
      <pages>
        <namespaces>
          <add namespace="System.Data.SqlClient"/>
          <add namespace="System.Data"/>
        </namespaces>
      </pages>

      <compilation debug="true" targetFramework="4.5" />
      <httpRuntime targetFramework="4.5" />
    </system.web>
  
  
    <appSettings>
      <add key="ValidationSettings:UnobtrusiveValidationMode" value="None"/>
    </appSettings>

  <connectionStrings>
    <add name="sqlcon" connectionString="Data Source=.;Initial Catalog=mca;Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
  
</configuration>
